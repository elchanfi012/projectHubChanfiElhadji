{% extends 'base.html.twig' %}

{% block title %}Liste projets!{% endblock %}

{% block body %}

    <h1 class="text-center"> Projets </h1>

    <form class="form" action="{{ path('add_project')}}" method="post" >
        <div class="row">
            <div class="col-2">
                <input class="btn btn-success mb-5" type="submit"value="Ajouter un projet">
            </div>
        </div>
    <form>

    <table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nom du projet</th>
      <th scope="col">Statuts</th>
      <th scope="col">Tâches</th>
      <th scope="col">Ajouté le</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
     {% set nbTasks =  0 %}
    {% for project in projects %}
        
        <tr>
            <td>{{ project.name }}</td>
            <td>{{ project.status }}</td>
            <td>{{project.tasks|length}}</td>
            
            <td>{{ project.startedAt|date('d-m-Y H:i:s') }}</td>
            <td>
                <a href="{{ path('detail_project', {project_id:project.id})}}">
                    Gérer
                </a>
            </td>
        </tr>

    {% endfor %}
    
   
  </tbody>
</table>

{% endblock %}
